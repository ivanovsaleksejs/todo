{
  "name": "todo",
  "version": "0.0.1",
  "description": "ToDo App",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "element.js": "ivanovsaleksejs/element.js",
    "nodemon": "^3.1.0"
  },
  "scripts": {
    "start": "nodemon  -e js,html,css",
    "build": "ln -s $(pwd)/node_modules/element.js/element.js $(pwd)/src/element.js && yarn copy-files",
    "copy-files": "rsync -av --exclude='node_modules' src/ dist/"
  },
  "nodemonConfig": {
    "ext": "js,html,css"
  }
}
